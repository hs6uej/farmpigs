import createMiddleware from 'next-intl/middleware';
import { NextRequest, NextResponse } from 'next/server';
import { getToken } from 'next-auth/jwt';

// Create i18n middleware
const intlMiddleware = createMiddleware({
  locales: ['en', 'th'],
  defaultLocale: 'th',
  localePrefix: 'never'
});

export default async function middleware(req: NextRequest) {
  const path = req.nextUrl.pathname;

  // Allow auth pages and API routes
  if (
    path.startsWith('/auth/') ||
    path.startsWith('/api/auth/') ||
    path.startsWith('/_next') ||
    path.startsWith('/static') ||
    path.match(/\.(ico|png|jpg|jpeg|svg|css|js)$/)
  ) {
    return intlMiddleware(req);
  }

  // Get token
  const token = await getToken({ req, secret: process.env.NEXTAUTH_SECRET });

  // Redirect to signin if not authenticated
  if (!token) {
    const signInUrl = new URL('/auth/signin', req.url);
    signInUrl.searchParams.set('callbackUrl', req.url);
    return NextResponse.redirect(signInUrl);
  }

  // Admin-only routes
  const adminRoutes = ['/settings', '/api/users'];
  const isAdminRoute = adminRoutes.some(route => path.startsWith(route));

  if (isAdminRoute && token?.role !== 'ADMIN') {
    return NextResponse.redirect(new URL('/dashboard', req.url));
  }

  // User role restrictions
  if (token?.role === 'USER') {
    const modificationRoutes = [
      '/sows/new',
      '/boars/new',
      '/piglets/new',
      '/pens/new',
      '/health/new',
      '/feed/new',
      '/breeding/new',
      '/farrowing/new',
    ];

    const isModificationRoute = modificationRoutes.some(route => path.startsWith(route));
    const isPostRequest = req.method === 'POST' || req.method === 'PUT' || req.method === 'DELETE';
    
    if (isModificationRoute || (isPostRequest && path.startsWith('/api/') && !path.includes('/api/auth'))) {
      return NextResponse.redirect(new URL('/reports', req.url));
    }
  }

  return intlMiddleware(req);
}

export const config = {
  matcher: [
    '/((?!api/auth|_next/static|_next/image|favicon.ico).*)',
  ],
};
